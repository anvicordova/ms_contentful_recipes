<h1>Recipe: <%= @recipe.title %></h1>
<p>Calories: <%=@recipe.calories %></p>
<% if @recipe.chef.present? %>
  <p>Chef: <%=@recipe.chef.name %></p>
<% end %>
<% if @recipe.tags.present? %>
  <p>Tags: <%=@recipe.tags.map(&:name).join(', ') %></p>
<% end %>
<p><%= markdown(@recipe.description) %></p>
<div>
  <%= image_tag @recipe.photo.url, style: 'height:300px;width:auto'%>
</div>
